<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nueva montaña rusa</h1>
    </div>

    <div class="col-md-6">

      <form enctype="multipart/form-data" action="/coasters/new" method="POST">

        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>

        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input">
        </div>

        <div class="form-group">
          <label for="inversions-input">Inversiones</label>
          <input name="inversions" type="number" class="form-control" id="inversions-input">
        </div>

        <div class="form-group">
          <label for="length-input">Longitud</label>
          <input name="length" type="number" class="form-control" id="length-input">
        </div>

        <div class="form-group">
            <label for="park-list">Parque en el que se encuentra:</label>
            <select name="park_id" class="form-control" id="park-list">

                {{#each parks}}

                  <option value="{{id}}"> {{name}} </option>

                {{/each}}

            </select>
        </div>

        <div class="form-group">
              <label for="coaster-image">Archivo</label>
              <input type="file" class="form-control" id="coaster-image" name="coaster_image">
        </div>


        {{#if errorMsg}}
            <p style="color: red"> ⚠️ {{errorMsg}} </p>
        {{/if}}


        <button type="submit" class="btn btn-primary">Crear montaña rusa</button>
        <a href="/coasters" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>