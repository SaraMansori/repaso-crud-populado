<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar montaña rusa</h1>
    </div>

    <div class="col-md-6">

      <form action="/coasters/edit?id={{info.coaster.id}}" method="POST">

        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{info.coaster.name}}">
        </div>

        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input" value="{{info.coaster.description}}">
        </div>
        
        <div class="form-group">
          <label for="inversions-input">Inversiones</label>
          <input name="inversions" type="number" class="form-control" id="inversions-input" value="{{info.coaster.inversions}}">
        </div>

        <div class="form-group">
          <label for="length-input">Longitud</label>
          <input name="length" type="number" class="form-control" id="length-input" value="{{info.coaster.length}}"> 
        </div>

        <div class="form-group">
          
          <label for="park-list">Parque en el que se encuentra:</label>
          <select name="park_id" class="form-control" id="park-list">

            {{#each info.parks}}

                {{#if isCurrPark}}

                    <option value="{{id}}" selected> {{name}} </option>

                {{else}}

                    <option value="{{id}}"> {{name}} </option>

                {{/if}}

            {{/each}}

          </select>
        </div>

        {{#if errorMsg}}
              <p style="color: red"> ⚠️ {{errorMsg}} </p>
        {{/if}}


        <button type="submit" class="btn btn-dark">Editar montaña rusa</button>
        <a href="/coasters" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>